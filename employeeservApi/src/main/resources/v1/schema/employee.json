{
  "title": "Employee resource",
  "description": "Employee resource object",
  "type": "object",
  "properties": {
    "id": {
      "description": "employee id",
      "type": "integer"
    },
    "first_name": {
      "description": "first name",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
    "last_name": {
      "description": "last name",
      "type": "string",
      "minLength": 1,
      "maxLength": 255
    },
	"date_of_birth": {
	  "description": "date of birth allowed format YYYY-MM-DD",
	  "type": "string",
      "pattern": "(((19|20)([2468][048]|[13579][26]|0[48])|2000)[/-]02[/-]29|((19|20)[0-9]{2}[/-](0[469]|11)[/-](0[1-9]|[12][0-9]|30)|(19|20)[0-9]{2}[/-](0[13578]|1[02])[/-](0[1-9]|[12][0-9]|3[01])|(19|20)[0-9]{2}[/-]02[/-](0[1-9]|1[0-9]|2[0-8])))"
      },
	
	"address": {
	 "description": "address of employee",
     "type": "object",
	 "properties": {
		"line1": {
		  "type": "string",
		  "minLength": 1,
          "maxLength": 255
		},
		"line2": {
		  "type": "string"
		},
		"city": {
		  "type": "string"
		},
		"state": {
		  "type": "string"
		},
		"country": {
		  "type": "string"
		},
		"zip_code": {
			"type": "integer",
			"minLength":1,
			"maxLength": 6
		}
	  },
	  "required": ["line1", "city","state","country","zip_code"]
	}
  },
  "required": [
    "first_name",
    "last_name",
	"date_of_birth",
	"address"
  ]
}